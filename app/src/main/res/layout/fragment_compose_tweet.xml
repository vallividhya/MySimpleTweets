<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    tools:context="com.codepath.apps.restclienttemplate.fragments.ComposeTweetDialogFragment">

    <EditText
        android:id="@+id/etNewTweet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/composeTweetHint"
        android:inputType="textMultiLine"
        android:layout_below="@+id/btn_close_dialog"/>

    <Button
        android:id="@+id/btn_tweet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tweet"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="18dp"
        android:layout_below="@+id/etNewTweet"
        android:layout_alignParentEnd="true"
        android:backgroundTint="@color/colorPrimary"
        android:onClick="onClickTweet"/>

    <ImageButton
        android:id="@+id/btn_close_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:tint="@color/colorPrimary"
        android:background="@android:color/transparent"
        app:srcCompat="@android:drawable/ic_menu_close_clear_cancel" />


</RelativeLayout>


